#include <irrlicht.h>

using namespace irr;

int main(int argc, char* argv[])
{
  IrrlichtDevice* device = createDevice(video::EDT_SOFTWARE, dimension<u32>(640, 480), 16, false, false, false, 0);
  
  if(!device) return 1;
  
  device->setWindowCaption(L"IRRLICHT WINDOW");
  
  IVideoDriver* driver = device->getVideoDriver();
  ISceneManager* smgr = device->getSceneManager();
  IGUIEnvironment* guienv = device->getGUIEnvironment();
  
  guienv->addStaticText(L"Hello, world! This is an irrlicht test build!", rect<s32>(10, 10, 260, 22), true);
  
  return 0;
}
